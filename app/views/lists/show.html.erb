<h1><%= @list.name %> List </h1>

<% if @bookmarks.any? %>
  <ul>
    <% @bookmarks.each do |bookmark| %>
          <li><h3><%= bookmark.movie[:title] %></h3></li>
          <%= bookmark.comment %>
          <%= link_to 'Delete', bookmark_path(bookmark), data:{ turbo_method: "delete", confirm: 'Are you sure?' } %>
    <% end %>
  </ul>
<% else %>
  <p>No bookmarks found.</p>
<% end %>


<%= link_to "Back", lists_path, class: "btn btn-secondary" %>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
