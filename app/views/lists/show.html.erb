<body>
  <div class="container">
    <h1><%= @list.name %> List </h1>
    <%= cl_image_tag @list.photo.key, height: 200, width: 300, crop: :fill %>
    <% if @bookmarks.any? %>
      <ul>
        <% @bookmarks.each do |bookmark| %>
              <li><h3><%= bookmark.movie[:title] %></h3>
              <%= bookmark.comment %>
              <%= image_tag bookmark.movie[:poster_url], alt: bookmark.movie[:title] %>
              <%= link_to 'Delete', bookmark_path(bookmark), data:{ turbo_method: "delete", confirm: 'Are you sure?' } %> </li>
        <% end %>
      </ul>
    <% else %>
      <p>No bookmarks found.</p>
    <% end %>
  </div>
    <%= link_to "Back", lists_path, class: "btn btn-secondary" %>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
</body>
